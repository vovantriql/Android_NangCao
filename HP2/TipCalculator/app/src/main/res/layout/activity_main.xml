<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/amountTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_margin="7dp"
        android:background="#03A9F4"
        android:elevation="@dimen/elevation"
        android:focusable="false"
        android:gravity="fill|fill_horizontal"
        android:padding="@dimen/textview_padding"
        android:visibility="visible" />

    <EditText
        android:id="@+id/amountEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_margin="7dp"
        android:background="#03A9F4"
        android:digits="0123456789"
        android:elevation="@dimen/elevation"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="fill|fill_horizontal"
        android:hint="@string/enter_amount"
        android:maxLength="6"
        android:paddingStart="8dp"
        android:visibility="visible">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/percentTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_margin="7dp"
        android:gravity="right|center_horizontal|center_vertical"
        android:hint="@string/tip_percentage"
        android:textSize="20dp" />

    <SeekBar
        android:id="@+id/percentSeekBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="7dp"
        android:max="30"
        android:maxHeight="11dip"
        android:minHeight="11dip"
        android:progress="15" />

    <TextView
        android:id="@+id/tipLableTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_gravity="right"
        android:layout_margin="7dp"
        android:hint="@string/tip"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/tipTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="7dp"
        android:background="@android:color/holo_orange_light"
        android:elevation="@dimen/elevation"
        android:gravity="center"
        android:padding="@dimen/textview_padding"/>

    <TextView
        android:id="@+id/totalLabelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="0"
        android:layout_gravity="right"
        android:layout_margin="7dp"
        android:hint="@string/total"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/totalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="fill_horizontal"
        android:layout_margin="7dp"
        android:background="@android:color/holo_orange_light"
        android:elevation="@dimen/elevation"
        android:gravity="center"
        android:padding="@dimen/textview_padding" />
</GridLayout>